    <script>
        function answerbox() {


            var type = document.getElementById('Question-type').value;
            console.log(type);
            if (type == "Single-Correct") {


                document.getElementById("single-correct").style.display = "block";
                document.getElementById("multiple-correct").style.display = "none";
                // document.getElementsByClassName("multiple-correct").style.backgroundColor = "#fa4";

                document.getElementById("numericals").style.display = "none";


            } else if (type == "Multiple-Correct") {

                document.getElementById("multiple-correct").style.display = "block";
                document.getElementById("single-correct").style.display = "none";
                document.getElementById("numericals").style.display = "none";

            } else if (type == "Numerical") {


                document.getElementById("numericals").style.display = "block";
                document.getElementById("single-correct").style.display = "none";
                document.getElementById("multiple-correct").style.display = "none";
            }
        }
    </script>
